<% provide(:title, 'Cart') %>
<h1>Cart</h1>
<% if @carts.any? %>
  <% @carts.each do |cart| %>
    <table class="row">
      <tr>
        <th class="col-md-4">Product Name</th>
        <th class="col-md-2">Quantity</th>
        <th class="col-md-2">Price</th>
        <th class="col-md-2">Total</th>
        <th class="col-md-2">Action</th>
      </tr>
      <tr>
        <td class="col-md-4"><%= link_to cart.product.name, product_path(cart.product.id) %></td>
        <td class="col-md-2"><%= cart.quantity %></td>
        <td class="col-md-2"><%= cart.product.price%></td>
        <td class="col-md-2"><%= cart.quantity * cart.product.price %></td>
        <td class="col-md-2"><%= link_to "Edit", product_path(cart.product.id) %>
        | <%= link_to "X", cart, method: :delete,
                                   data: { confirm: "Are u sure?" } %></td>
      </tr>
    </table>
  <% end %>
<% else %>
  <p>Your cart is empty. Please add some products to it.</p>
<% end %>
